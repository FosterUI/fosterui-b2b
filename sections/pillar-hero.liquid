{{ 'section-pillar-layout.css' | asset_url | stylesheet_tag }}

<style>
  /* Section-specific CSS for the Hero */
  .pillar-hero {
    padding: 8rem 0;
    text-align: center;
    /* Hero uses white background */
    background-color: var(--color-brand-white);
    border-bottom: 1px solid #e0e0e0;
  }

  .pillar-hero h1 {
    /* 4.8rem = 48px */
    font-size: 4.8rem;
    font-weight: 900;
    color: var(--color-brand-primary-dark);
    margin-bottom: 2.5rem;
    line-height: 1.2;
  }

  .pillar-hero__intro {
    /* 1.92rem = ~19px */
    font-size: 1.92rem;
    max-width: 80rem;
    margin: 0 auto;
  }

  /* Mobile adjustments */
  @media screen and (max-width: 989px) {
    .pillar-hero {
      padding: 6rem 0;
    }
    .pillar-hero h1 {
      /* 3.6rem = 36px */
      font-size: 3.6rem;
    }
  }
</style>

<section class="pillar-hero pillar-wrapper">
  <div class="pillar-container">
    {% if section.settings.kicker != blank %}
      {# Updated class to kicker-brand #}
      <div class="kicker-brand">{{ section.settings.kicker }}</div>
    {% endif %}

    {# Automatically use the Page or Article title as the H1 #}
    <h1>
      {% if template.name == 'page' %}
        {{ page.title }}
      {% elsif template.name == 'article' %}
        {{ article.title }}
      {% endif %}
    </h1>

    {% if section.settings.introduction != blank %}
      <div class="pillar-hero__intro">
        {{ section.settings.introduction }}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Pillar Hero",
  "settings": [
    {
      "type": "paragraph",
      "content": "The H1 title is automatically pulled from the Page or Article Title."
    },
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker (Above Title)",
      "default": "The Definitive Guide for 2025/2026"
    },
    {
      "type": "richtext",
      "id": "introduction",
      "label": "Introduction Paragraph",
      "default": "<p>Stop relying on spreadsheets and manual processes. This guide outlines the exact strategy required to transform your Shopify DTC store into a frictionless, high-volume B2B powerhouse using strategic AI automation.</p>"
    }
  ],
  "presets": [
    {
      "name": "Pillar Hero"
    }
  ]
}
{% endschema %}
