{{ 'section-blog-layout.css' | asset_url | stylesheet_tag }}

<header class="blog-header">
  <div class="page-width">
    {% if section.settings.kicker != blank %}
      <div class="kicker-brand">{{ section.settings.kicker }}</div>
    {% endif %}

    {# Automatically use the Blog title #}
    <h1>{{ blog.title }}</h1>

    {% if section.settings.introduction != blank %}
      <div class="blog-header__intro">
        {{ section.settings.introduction }}
      </div>
    {% endif %}
  </div>
</header>

{% schema %}
{
  "name": "B2B Blog Header",
  "settings": [
    {
      "type": "paragraph",
      "content": "The H1 title is automatically pulled from the Blog Title (Settings > Blogs)."
    },
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker (Above Title)",
      "default": "Insights & Strategy"
    },
    {
      "type": "richtext",
      "id": "introduction",
      "label": "Introduction Paragraph",
      "default": "<p>Specialized implementation tactics and insights on the intersection of AI and B2B E-commerce for Shopify merchants.</p>"
    }
  ],
  "presets": [
    {
      "name": "B2B Blog Header"
    }
  ]
}
{% endschema %}
