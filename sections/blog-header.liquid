{{ 'section-blog-layout.css' | asset_url | stylesheet_tag }}

<header class="blog-header">
  <div class="page-width">
    <div
      class="blog-header__content"
      {% if settings.animations_reveal_on_scroll %}
        data-cascade
      {% endif %}
    >
      {% if section.settings.kicker != blank %}
        <div 
          class="kicker-brand{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            style="--animation-order: 1;"
          {% endif %}
        >{{ section.settings.kicker }}</div>
      {% endif %}
      
      {% comment %} Automatically use the Blog title defined in Shopify Admin {% endcomment %}
      <h1 
        class="{% if settings.animations_reveal_on_scroll %}scroll-trigger animate--slide-in{% endif %}"
        {% if settings.animations_reveal_on_scroll %}
          style="--animation-order: 2;"
        {% endif %}
      >{{ blog.title }}</h1>
      
      {% if section.settings.introduction != blank %}
        <div 
          class="blog-header__intro{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            style="--animation-order: 3;"
          {% endif %}
        >
            {{ section.settings.introduction }}
        </div>
      {% endif %}
    </div>
  </div>
</header>

{% schema %}
{
  "name": "B2B Blog Header",
  "settings": [
    {
      "type": "paragraph",
      "content": "The H1 title is automatically pulled from the Blog Title (Settings > Blogs)."
    },
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker (Above Title)",
      "default": "Insights & Strategy"
    },
    {
      "type": "richtext",
      "id": "introduction",
      "label": "Introduction Paragraph",
      "default": "<p>Specialized implementation tactics and insights on the intersection of AI and B2B E-commerce for Shopify merchants.</p>"
    }
  ],
  "presets": [
    {
      "name": "B2B Blog Header"
    }
  ]
}
{% endschema %}