{% schema %}
{
  "name": "B2B Newsletter Signup",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to the \"B2B AI Edge\""
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Get specialized insights and implementation tactics for Shopify merchants, delivered weekly."
    }
  ],
  "presets": [
    {
      "name": "B2B Newsletter Signup"
    }
  ]
}
{% endschema %}
