      "default": "Book Your Roadmap or Request Audit"
    },
    {
      "type": "header",
      "content": "HubSpot Tab Content (If Enabled)"
    },
    {
      "type": "text",
      "id": "roadmap_title",
      "label": "HubSpot: Roadmap Tab Title",
      "default": "The Essential First Step"
    },
    {
      "type": "textarea",
      "id": "roadmap_desc",
      "label": "HubSpot: Roadmap Tab Description"
    },
    {
      "type": "text",
      "id": "audit_title",
      "label": "HubSpot: Audit Tab Title",
      "default": "Get a Quick Overview First"
    },
    {
      "type": "textarea",
      "id": "audit_desc",
