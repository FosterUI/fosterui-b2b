{{ 'section-pillar-layout.css' | asset_url | stylesheet_tag }}
<script src="{{ 'component-pillar-layout.js' | asset_url }}" defer="defer"></script>

<main class="pillar-container pillar-layout pillar-wrapper">
  <div class="mobile-toc">
    <div class="mobile-toc-header">
      <span>{{ section.settings.toc_title }}</span>
      <span class="toggle-icon">â–¼</span>
    </div>
    <ul class="mobile-toc-list" id="mobile-toc-nav"></ul>
  </div>

  <aside class="sidebar">
    <div class="toc-title">{{ section.settings.toc_title }}</div>
    <ul class="toc-list" id="toc-nav"></ul>

    {% if section.settings.enable_sidebar_cta %}
      <div class="sidebar-cta">
        <h4>{{ section.settings.cta_title }}</h4>
        <p>{{ section.settings.cta_text }}</p>
        {# Updated button classes to use the global brand styles #}
        <a href="{{ section.settings.cta_link }}" class="btn-brand btn-brand-primary">
          {{ section.settings.cta_button }}
        </a>
      </div>
    {% endif %}
  </aside>

  {# The ID 'content-body' is essential for the JS to find the H2s #}
  <article class="content-body pillar-content" id="content-body">
    {% comment %} Supports both Page and Article templates {% endcomment %}
    {% if template.name == 'page' %}
      {{ page.content }}
    {% elsif template.name == 'article' %}
      {{ article.content }}
    {% endif %}
  </article>
</main>

{% schema %}
{
  "name": "Pillar Main Content",
  "settings": [
    {
      "type": "header",
      "content": "Table of Contents"
    },
    {
      "type": "paragraph",
      "content": "The TOC is automatically generated from the H2 headings in the content."
    },
    {
      "type": "text",
      "id": "toc_title",
      "label": "TOC Title",
      "default": "In This Guide"
    },
    {
      "type": "header",
      "content": "Sidebar CTA"
    },
    {
      "type": "checkbox",
      "id": "enable_sidebar_cta",
      "label": "Enable Sticky Sidebar CTA",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_title",
      "label": "CTA Title",
      "default": "Ready to Execute?"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Start with the essential 5-day deep-dive audit."
    },
    {
      "type": "text",
      "id": "cta_button",
      "label": "CTA Button Label",
      "default": "Book the Roadmap"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    }
  ],
  "presets": [
    {
      "name": "Pillar Main Content"
    }
  ]
}
{% endschema %}
